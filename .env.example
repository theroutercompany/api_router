# Copy this file to .env for local development. Values represent sane defaults.
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Upstream service targets and health probes
TRADE_API_URL=http://localhost:4010
TASK_API_URL=http://localhost:4020
TRADE_HEALTH_PATH=/health
TASK_HEALTH_PATH=/health
READINESS_TIMEOUT_MS=2000

# Gateway rate limiting and CORS
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120
CORS_ALLOWED_ORIGINS=http://localhost:3000

# JWT validation (replace with real secrets in staging/prod)
JWT_SECRET=change-me-to-a-32-character-secret
JWT_AUDIENCE=routers-api
JWT_ISSUER=routers.dev

# Example staging overrides
# NODE_ENV=production
# LOG_LEVEL=info
# TRADE_API_URL=https://trade-api.onrender.com
# TASK_API_URL=https://task-api.onrender.com
# CORS_ALLOWED_ORIGINS=https://trade.routers.systems,https://task.routers.systems
