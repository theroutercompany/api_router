{
  "name": "api-router-gateway",
  "version": "0.1.0",
  "description": "API Router Gateway service",
  "private": true,
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/server.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.json && npm run openapi:build",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --ignore-watch node_modules -- src/server.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "typecheck": "tsc --project tsconfig.dev.json --noEmit",
    "openapi:build": "openapi-merge-cli --config openapi-merge.config.json",
    "openapi:docs": "npm run openapi:build && redoc-cli build dist/openapi.json --output docs/openapi.html"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "node ./scripts/typecheck-staged.js"
    ],
    "tests/**/*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.11.0",
    "pino-http": "^10.5.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.2",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.2.1",
    "openapi-merge-cli": "^1.3.2",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "redoc-cli": "^0.13.21",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0"
  }
}
